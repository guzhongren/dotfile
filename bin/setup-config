#!/bin/bash
dir=$(pwd)
cd ~ || exit

# zshrc
ln -s "${dir}"/config/zsh/.zshrc .zshrc

# powerlevel10k
ln -s "${dir}"/config/powerlevel10k/.p10k.zsh .p10k.zsh
# gnupg
mkdir -p ~/.gnupg
cd "${dir}"/config/.gnupg || exit
ln -s "${dir}"/config/.gnupg/gpg-agent.conf gpg-agent.conf
cd ~ || exit

# GPG
git config --global user.email "guzhongren@live.cn"
git config --global user.name "guzhongren"
git config --global user.signingkey D18AEC180356622D

